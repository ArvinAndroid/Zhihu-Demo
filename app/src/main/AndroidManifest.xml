<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cn.jason">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name="com.cn.jason.Application"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.cn.jason.activity.NewsDetailActivity"
            android:launchMode="singleInstance" />
        <activity
            android:name="com.cn.jason.activity.MainActivity"
            android:label="@string/main_name"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.cn.jason.activity.SplashActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
